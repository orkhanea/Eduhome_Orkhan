@model VmTeacher

@{
    ViewData["Title"] = "Teacher";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            @{
                                foreach (var item in Model.Banners)
                                {
                                    if (item.Page == "Teacher")
                                    {
                                        <h2>@item.Title</h2>
                                    }
                                }
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
@{
    foreach (var item in Model.Teachers)

    {
        <div class="teacher-details-area pt-150 pb-60">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <div class="teacher-details-img">
                            <img src="~/img/teacher/@item.Image" alt="teacher" style="width: 470px !important; height: 479px !important;">
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-7 col-xs-12">
                        <div class="teacher-details-content ml-50">
                            <h2>@item.Name @item.Surname</h2>
                            <h5>@item.Position</h5>
                            <h4>about me</h4>
                            <p>@item.About</p>
                            <ul>
                                <li><span>degree: </span>@item.Degree</li>
                                <li><span>experience: </span>@item.Experience</li>
                                <li><span>hobbies: </span>@item.Hobbie</li>
                                <li><span>faculty: </span>@item.Faculity</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-4">
                        <div class="teacher-contact">
                            <h4>contact information</h4>
                            <p><span>mail me : </span>@item.Email</p>
                            <p><span>make a call : </span>@item.Phone</p>
                            <p><span>skype : </span> @item.Skype</p>
                            <ul>
                                @{
                                    foreach (var a in Model.TeacherSocialToTeachers)
                                    {
                                        foreach (var s in Model.TeacherSocials)
                                        {
                                            if (s.Id == a.TeacherSocialId && a.TeacherId == item.Id)
                                            {
                                                <li><a href="@s.Link"><i class="@s.Icon"></i></a></li>
                                            }
                                        }

                                    }
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-9 col-sm-8">
                        <div class="skill-area">
                            <h4>skills</h4>
                        </div>
                        <div class="skill-wrapper">
                            <div class="row">
                                @{
                                    foreach (var skill in Model.TeacherSkills)
                                    {
                                        if (skill.Id == item.TeacherSkillsId)
                                        {
                                            <div class="col-sm-4">
                                                <div class="skill-bar-item">
                                                    <span>language</span>
                                                    <div class="progress">
                                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @skill.Language%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                                            <span class="text-top">@skill.Language%</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="skill-bar-item">
                                                    <span>team leader</span>
                                                    <div class="progress">
                                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @skill.TeamLeader%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                                            <span class="text-top">@skill.TeamLeader%</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="skill-bar-item">
                                                    <span>development</span>
                                                    <div class="progress">
                                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @skill.Development%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                                            <span class="text-top">@skill.Development%</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="skill-bar-item">
                                                    <span>design</span>
                                                    <div class="progress">
                                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @skill.Design%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                                            <span class="text-top">@skill.Design%</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="skill-bar-item">
                                                    <span>innovation</span>
                                                    <div class="progress">
                                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @skill.Inovation%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                                            <span class="text-top">@skill.Inovation%</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="skill-bar-item">
                                                    <span>communication</span>
                                                    <div class="progress">
                                                        <div data-wow-delay="1.2s" data-wow-duration="1.5s" style="width: @skill.Communication%; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                                            <span class="text-top">@skill.Communication%</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
<!-- Teacher End -->

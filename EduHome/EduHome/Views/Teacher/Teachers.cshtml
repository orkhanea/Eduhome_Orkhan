@model VmTeacher

@{
    ViewData["Title"] = "Teachers";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            @{
                                foreach (var item in Model.Banners)
                                {
                                    if (item.Page == "Our Teachers")
                                    {
                                        <h2>@item.Title</h2>
                                    }
                                }
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">

            @{
                foreach (var item in Model.Teachers)
                {
                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="single-teacher mb-45">
                            <div class="single-teacher-img">
                                <a asp-controller="Teacher" asp-action="Teacher" asp-route-id="@item.Id"><img src="~/img/teacher/@item.Image" alt="teacher"></a>
                            </div>
                            <div class="single-teacher-content text-center">
                                <h2><a asp-controller="Teacher" asp-action="Teacher" asp-route-id="@item.Id">@item.Name @item.Surname</a></h2>
                                <h4>@item.Position</h4>
                                <ul>

                                    @{
                                        foreach (var a in Model.TeacherSocialToTeachers)
                                        {
                                            foreach (var s in Model.TeacherSocials)
                                            {
                                                if (s.Id == a.TeacherSocialId && a.TeacherId == item.Id)
                                                {
                                                    <li><a href="@s.Link"><i class="@s.Icon"></i></a></li>
                                                }
                                            }

                                        }
                                    }

                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }



        </div>
    </div>
</div>
<!-- Teacher End -->

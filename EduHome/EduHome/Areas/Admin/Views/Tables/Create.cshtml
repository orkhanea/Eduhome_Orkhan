@model NoticeBoardLeft
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row my-5">
        <div class="col-lg-12 my-5">
            <form asp-area="Admin" asp-controller="Tables" asp-action="Create" method="post">
                <div asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Text" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Text</label>
                    <textarea class="form-control" asp-for="@Model.Text" rows="7"></textarea>
                    <span class="text-danger" asp-validation-for="@Model.Text"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CreatedDate" class="form-label" style="font-weight: bold; font-size: 20px; color: #223e9c;">Created Date</label>
                    <input class="form-control" asp-for="@Model.CreatedDate">
                    <span class="text-danger" asp-validation-for="@Model.CreatedDate"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>


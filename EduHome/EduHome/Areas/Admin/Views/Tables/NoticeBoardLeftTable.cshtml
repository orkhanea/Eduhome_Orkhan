@model List<NoticeBoardLeft>

    @{
        ViewData["Title"] = "NoticeBoardlLeftTable";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    }


    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"><a class="btn btn-primary btn-lg" asp-area="Admin" asp-controller="Tables" asp-action="Create">Create New</a></p>
                @{

                    //Delete Errrors
                    if (TempData["Id"] != null)
                    {

                        <p class="alert alert-warning" role="alert" style="text-align: center; font-size: 20px; width: 50%; padding: 10px 0; font-weight: 600;">ID is uncertain.</p>
                        TempData["Id"] = null;

                    }

                    if (TempData["NBL"] != null)
                    {

                        <p class="alert alert-warning" role="alert" style="text-align: center; font-size: 20px; width: 50%; padding: 10px 0; font-weight: 600;">The ID you are looking for could not be found</p>
                        TempData["NBL"] = null;

                    }

                }
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr style="text-align: center;">
                                <th style="font-weight: bold; font-size: 20px; color: #223e9c;">
                                    #
                                </th>
                                <th style="font-weight: bold; font-size: 20px; color: #223e9c;">
                                    Text
                                </th>
                                <th style="font-weight: bold; font-size: 20px; color: #223e9c;">
                                    Created Date
                                </th>
                                <th style="font-weight: bold; font-size: 20px; color: #223e9c;">
                                    Edit
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 0;
                                foreach (var item in Model)
                                {

                                    counter++;
                                    <tr>
                                        <td style="text-align: center;">
                                            @counter
                                        </td>
                                        <td>
                                            @item.Text
                                        </td>
                                        <td style="text-align: center;">
                                            @item.CreatedDate.ToString("d MMMM yyyy")
                                        </td>
                                        <td style="text-align: center;">
                                            <a class="btn btn-success btn-sm mb-2" style="width: 100px;" asp-area="Admin" asp-controller="Tables" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                            <a class="btn btn-danger btn-sm" style="width: 100px;" asp-area="Admin" asp-controller="Tables" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this data?')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


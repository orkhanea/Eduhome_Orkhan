@model List<Teacher>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"><a class="btn btn-primary btn-lg" asp-area="Admin" asp-controller="Teacher" asp-action="Create">Add Teacher</a></p>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="text-center">
                        <tr>
                            <th style="color: midnightblue !important; font-weight: 600 !important; font-size: 20px !important;">
                                #
                            </th>
                            <th style="color: midnightblue !important; font-weight: 600 !important; font-size: 20px !important;">
                                User
                            </th>
                            <th style="color: midnightblue !important; font-weight: 600 !important; font-size: 20px !important;">
                                Full Name
                            </th>
                            <th style="color: midnightblue !important; font-weight: 600 !important; font-size: 20px !important;">
                                Position
                            </th>
                            @*<th>
                                Degree
                            </th>*@
                            @*<th>
                                Faculity
                            </th>
                            <th>
                                Experience
                            </th>*@
                            <th style="color: midnightblue !important; font-weight: 600 !important; font-size: 20px !important;">
                                Email
                            </th>
                            <th style="color: midnightblue !important; font-weight: 600 !important; font-size: 20px !important;">
                                Phone
                            </th>
                            <th style="color: midnightblue !important; font-weight: 600 !important; font-size: 20px !important;">
                                Skype
                            </th>
                            @*<th style="color: midnightblue !important; font-weight: 600 !important; font-size: 20px !important;">
                                About
                            </th>*@
                            <th style="color: midnightblue !important; font-weight: 600 !important; font-size: 20px !important;">
                                Edit
                            </th>
                            @*<th>
                                Skills
                            </th>*@
                        </tr>
                    </thead>
                    @{
                        int counter = 0;
                        foreach (var item in Model)
                        {
                            counter++;
                            <tbody class="text-center">
                                <tr>
                                    <td style="font-size: 18px !important;">
                                        @counter
                                    </td>
                                    <td class="py-1" style="font-size: 18px !important;">
                                        <img src="~/img/teacher/@item.Image" alt="image" style="width: 80px !important; height: 80px !important;" />
                                    </td>
                                    <td style="font-size: 18px !important;">
                                        @item.Name @item.Surname
                                    </td>
                                    <td style="font-size: 18px !important;">
                                        @item.Position
                                    </td>
                                    @*<td>
                                        @item.Degree
                                    </td>
                                    <td>
                                        @item.Faculity
                                    </td>
                                    <td>
                                        @item.Experience
                                    </td>*@
                                    <td style="font-size: 18px !important;">
                                        @item.Email
                                    </td>
                                    <td style="font-size: 18px !important;">
                                        @item.Phone
                                    </td>
                                    <td style="font-size: 18px !important;">
                                        @item.Skype
                                    </td>
                                    @*<td style="font-size: 18px !important;">
                                        @(item.About != null && item.About.Length > 50 ? item.About.Substring(0, 50)+"..." : item.About )
                                    </td>*@
                                    @*<td>
                                        @item.Teacherskills.Communication
                                        @item.Teacherskills.Design
                                        @item.Teacherskills.Development
                                        @item.Teacherskills.Inovation
                                        @item.Teacherskills.Language
                                        @item.Teacherskills.TeamLeader
                                    </td>*@
                                    <td style="text-align: center;">
                                            <a class="btn btn-success btn-sm" style="width: 100px;" asp-area="Admin" asp-controller="NBLTable" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                            <a class="btn btn-danger btn-sm my-2" style="width: 100px;" asp-area="Admin" asp-controller="NBLTable" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this data?')">Delete</a>
                                            <a class="btn btn-info btn-sm" style="width: 100px;" asp-area="Admin" asp-controller="NBLTable" asp-action="Update" asp-route-id="@item.Id">Details</a>
                                        </td>
                                </tr>
                            </tbody>
                        }
                    }

                </table>
            </div>
        </div>
    </div>
</div>